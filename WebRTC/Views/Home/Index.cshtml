</style>

<script>
    //should be moved to myscript file
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: '@Url.Action("GetAllConferences", "Home")',
            datatype: "json",
            success: function (data) {

                $('#allConferenceDiv').html('');
                $('#allConferenceDiv').html(data);

                },
            error: function () {

                }
            });
    })
   
   

</script>